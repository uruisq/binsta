<% if !current_user?(feed.user) %>
    <span class="favorite">
    <% if feed.iine?(current_user) %>
      <%= form_for(feed.favorites.find_by(user_id: current_user.id), method: :delete, remote: true) do |f| %>
        <%= button_tag(class: "btn btn-default btn-xs") do %>
          <%= content_tag :span, "#{feed.favorites_count}", class: "glyphicon glyphicon-heart" %>
        <% end %>
      <% end %>
    <% else %>
      <%= form_for(feed.favorites.build, remote: true) do |f| %>
        <div><%= hidden_field_tag :feed_id, feed.id %></div>
        <%= button_tag(class: "btn btn-default btn-xs") do %>
          <%= content_tag :span, "#{feed.favorites_count}", class: "glyphicon glyphicon-heart-empty" %>
        <% end %>
      <% end %>
    <% end %>
  </span>
<% end %>