<div  class="fullheight" style="background-image:url(/images/user_image.png)" />
  <h1><%= @user.name %>のページ</h1>
  <%= image_tag @user.icon.to_s, height: 100 %>
  <p>メールアドレス: <%= @user.email %></p>

  <% if current_user?(@user) %>
    <p><%= link_to 'ユーザー情報の編集', edit_user_path %></p>
  <% end %>

  <% @feeds.each do |feed| %>
    <hr>
    <p><span>feed内容: </span><%=link_to feed.content, feed_path(feed.id) %></p>
  <% end %>

  <% @favorite_feeds.each do |feed| %>
    <hr>
    <p><span>fav内容: </span><%=link_to feed.content, feed_path(feed.id) %></p>
  <% end %>

  <% if logged_in? %>
    <p><%= link_to "feed", feeds_path %>をしてください</p>
    <% else %>
    <p><%= link_to "ログイン", new_session_path %>をしてください</p>
  <% end %>

</div>